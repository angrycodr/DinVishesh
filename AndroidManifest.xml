<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ojas.firstapp.dinvishesh"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar" >
        <activity
            android:name="ojas.firstapp.dinvishesh.Splash"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ojas.firstapp.dinvishesh.Home"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="ojas.firstapp.dinvishesh.HOME" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="ojas.firstapp.dinvishesh.viewCalendar"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="ojas.firstapp.dinvishesh.VIEWCALENDAR" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="ojas.firstapp.dinvishesh.AddEventPage"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="ojas.firstapp.dinvishesh.ADDEVENTPAGE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
    </application>

</manifest>